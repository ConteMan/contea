{
  "name": "contea",
  "version": "0.0.1",
  "description": "Chrome Extension for ConteMan",
  "keywords": [
    "Chrome",
    "Extension"
  ],
  "license": "MIT",
  "author": "ConteMan",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ConteMan/contea.git"
  },
  "main": "index.js",
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "dev:bg": "npm run build:bg -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:bg",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "build:bg": "vite build --config vite.config.bg.ts",
    "clear": "rimraf extension/dist extension/manifest.json extension.*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "bugs": {
    "url": "https://github.com/ConteMan/contea/issues"
  },
  "homepage": "https://github.com/ConteMan/contea#readme",
  "devDependencies": {
    "@antfu/eslint-config": "^0.16.1",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.21",
    "@types/webextension-polyfill": "^0.8.0",
    "@vitejs/plugin-vue": "^2.2.4",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.11.0",
    "esno": "^0.14.1",
    "fs-extra": "^10.0.1",
    "kolorist": "^1.5.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2",
    "vite": "^2.8.6",
    "vue": "^3.2.31",
    "webextension-polyfill": "^0.8.0"
  }
}
