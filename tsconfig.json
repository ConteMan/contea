{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es2016",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@setting/*": [
        "setting/*"
      ],
      "@enums/*": [
        "enums/*"
      ],
      "@localTypes/*": [
        "types/*"
      ],
    },
  },
  "include": [
    "vite.config.ts",
    "vite.config.bg.ts",
    "vite.config.content.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "utils/**/*.ts",
    "services/**/*.ts",
    "models/**/*.ts",
    "setting/*.ts",
    "enums/*.ts",
    "types/*.d.ts",
    "scripts/*.ts",
  ],
  "exclude": [
    "dist",
    "node_modules",
  ]
}
