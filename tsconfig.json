{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "typeRoots": [
      "./node_modules/@types/",
      "./src/types"
    ],
    "types": [
      "vite/client"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@newTab/*": [
        "src/newTab/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@enums/*": [
        "src/enums/*"
      ],
      "@localTypes/*": [
        "src/types/*"
      ]
    }
  },
  "include": [
    "vite.config.ts",
    "vite.config.bg.ts",
    "vite.config.content.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/*.d.ts",
    "scripts/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
